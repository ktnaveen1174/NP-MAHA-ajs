
 <%- include('../partials/header')  %> 

 <%- include ('../partials/main_nav') %>

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>
            <a href="/faculty/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add a Faculty</a>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Faculty Name</th>
                    <th class="text-center col-2">Student</th>
                    <th class="text-center col-1">Course</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < FacultyList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= FacultyList[count].name %></td>
                        <td class="text-center col-2"><%= FacultyList[count].student_id %></td>
                        <td class="text-center col-1"><%= FacultyList[count].course_id %></td>
                        <td class="text-center col-1">
                            <a href="/faculty/edit/<%= FacultyList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/faculty/delete/<%= FacultyList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>

  <%- include ('../partials/bottom_nav') %>  
  <%- include ('../partials/footer') %>
  

  





