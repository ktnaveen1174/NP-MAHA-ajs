
 <%- include('../partials/header')  %> 

 <%- include ('../partials/main_nav') %>

  <!-- Main Content -->
  <main class="container" style="margin-left: -10px;">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>
            <a href="/student/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add a Student</a>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-3">Student Name</th>
                    <th class="text-center col-2">Email Address</th>
                    <th class="text-center col-1">Phone</th>
                    <th class="text-centre col-1">Gender</th>
                    <th class="text-center col-3">Semester</th>
                    <th class="text-center col-3">Birth Date</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < StudentList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-3"><%= StudentList[count].name %></td>
                        <td class="text-center col-2"><%= StudentList[count].email %></td>
                        <td class="text-center col-1"><%= StudentList[count].phone %></td>
                        <td class="text-centre col-1"><%= StudentList[count].gender %></td>
                        <td class="text-center col-3"><%= StudentList[count].semester %></td>
                        <td class="text-center col-3"><%= StudentList[count].birthDate %></td>
                        <td class="text-center col-1">
                            <a href="/student/edit/<%= StudentList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/student/delete/<%= StudentList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>

  <%- include ('../partials/bottom_nav') %>  
  <%- include ('../partials/footer') %>