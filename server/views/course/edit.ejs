
 <%- include('../partials/header')  %> 

 <%- include ('../partials/main_nav') %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="schoolTextField">School</label>
                    <input type="text" class="form-control"
                    id="schoolTextField"
                    placeholder="Enter the School Name"
                    name="school" 
                    value="<%= course.school %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="courseNameTextField">Course Name</label>
                    <input type="text" class="form-control"
                    id="courseNameTextField"
                    placeholder="Enter the Course Name"
                    name="courseName" 
                    value="<%= course.courseName %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="lengthTextField">Length</label>
                    <input type="text" class="form-control"
                    id="lengthTextField"
                    placeholder="Enter the Length of the Course"
                    name="length" 
                    value="<%= course.length %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="credentialsTextField">Course Name</label>
                    <input type="text" class="form-control"
                    id="credentialsTextField"
                    placeholder="Enter the Course Credentials"
                    name="credentials" 
                    value="<%= course.credentials %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="locationTextField">Detail</label>
                    <input type="text" class="form-control"
                    id="locationTextField"
                    placeholder="Enter the Location"
                    name="location" 
                    value="<%= course.location %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/course" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include ('../partials/bottom_nav') %>  
<%- include ('../partials/footer') %>