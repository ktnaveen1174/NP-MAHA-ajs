
<%- include('../partials/header')  %> 

<%- include ('../partials/main_nav') %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Course Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Course Name"
                    name="name" 
                    value="<%= course.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Detail</label>
                    <input type="text" class="form-control"
                    id="detailTextField"
                    placeholder="Enter the Course's Detail"
                    name="detail" 
                    value="<%= course.detail %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/course" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include ('../partials/bottom_nav') %>  
  <%- include ('../partials/footer') %>