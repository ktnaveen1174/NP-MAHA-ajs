
<%- include('../partials/header')  %> 

<%- include ('../partials/main_nav') %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Event Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Event Name"
                    name="name" 
                    value="<%= event.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control"
                    id="descriptionTextField"
                    placeholder="Enter the Event's Description"
                    name="description" 
                    value="<%= event.description %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="dateTextField">Date</label>
                    <input type="text" class="form-control"
                    id="dateTextField"
                    placeholder="Enter the Date of the Event"
                    name="date"
                    value="<%= event.Date %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="timeRangesTextField">Time</label>
                    <input type="text" class="form-control"
                    id="timeRangesTextField"
                    placeholder="Enter the Event's Time"
                    name="timeRanges"
                    value="<%= event.TimeRanges %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="locationTextField">Location</label>
                    <input type="text" class="form-control"
                    id="locationTextField"
                    placeholder="Enter the Event's Location"
                    name="location"
                    value="<%= event.location %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/event" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include ('../partials/bottom_nav') %>  
  <%- include ('../partials/footer') %>